@model ChangeRequestManagment.Models.ViewModels.Module.ModuleViewModel
@{
    ViewData["Title"] = "Add";
}
<div class="card card-primary">
    <div class="card-header">
        <h4>Add Sub Module of @ViewData["ParentModuleNameFromModuleController"]</h4>
    </div>
        <form method="post" asp-action="AddSubModule" asp-controller="Module">
            <div class="card-body">
                <input type="hidden" asp-for="ProjectId" value = "@ViewData["ProjectIdFromSubModuleController"]" />
                <input type="hidden" asp-for="ParentModulelId" value = "@ViewData["ParentModuleIdFromSubModuleController"]" />
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="ModuleName"></label>
                        <input asp-for="ModuleName" class="form-control" autofocus />
                        <span asp-validation-for="ModuleName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                    <button type="submit" class="btn btn-primary mybtn-position">Submit</button> &nbsp;
                    <button type="reset" class="btn btn-secondary mybtn-position set-pos" onclick= "cancel(@ViewData["ProjectIdFromSubModuleController"]);">Cancel</button>
	            </div>
        </form>
</div>

<style>
    .mybtn-position {
        float: right;
    }

    .set-pos {
        margin-right: 1vh;
    }
</style>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        function cancel(data)
        {
            window.location = "/Module/Index/"+data;
        }
    </script>
}