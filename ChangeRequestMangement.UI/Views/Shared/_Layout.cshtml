<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Change Request Mangement | @ViewData["Title"] </title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="~/theme/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/theme/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <link rel="stylesheet" href="~/theme/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />

    <!-- DataTables -->
    <link rel="stylesheet" href="~/theme/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/theme/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/theme/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    @await RenderSectionAsync("Links", required:false)
</head>
<body class="hold-transition dark-mode sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
    <div class="wrapper">

        <!-- Preloader -->
        <div class="preloader flex-column justify-content-center align-items-center">
            <img class="animation__wobble" src="~/Icons/logo-main.png" height="60" width="60">
        </div>

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-dark">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>

            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>

                <!-- Messages Dropdown Menu -->
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="fa fa-cog" aria-hidden="true"></i>

                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <div class="dropdown-divider"></div>
                        <!-- Message Start -->
                        <div class="dropdown-item">
                            <form asp-controller="Account" asp-action="Logout">

                                @Html.AntiForgeryToken()
                                <button type="submit" style="width:100%; background-color:transparent; border:none; color: white;">
                                    <i class="fas fa-user"></i>
                                    <span>Logout</span>
                                </button>

                            </form>
                            <div class="dropdown-divider"></div>
                            <!-- Message End -->
                        </div>

                    </div>
                </li>

            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->

        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a asp-action="Index" asp-controller="Dashboard" class="brand-link">
                <img src="~/Icons/logo-main.png" alt="CRM Logo" class="brand-image" style="opacity: .8">
                <span class="brand-text font-weight-light">CRM</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/Icons/profile-logo.png" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a asp-action="Index" asp-controller="Profile" class="d-block">@User.FindFirst("FirstName").Value @User.FindFirst("LastName").Value</a>
                    </div>
                </div>
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        @if (User.IsInRole("ADMIN"))
                        {
                            <li class="nav-item">
                            <a asp-action="Index" asp-controller="Dashboard" class="nav-link">
                                <i class="fas fa-swatchbook"></i>
                                    <p class="adjust-space">
                                        Dashboard
                                        <span class="badge badge-info right"></span>
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                            <a asp-action="ViewStatus" asp-controller="Admin" class="nav-link">
                                <i class="fas fa-file-invoice"></i>
                                    <p class="adjust-space">
                                        View Change Requests
                                        <span class="badge badge-info right"></span>
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                            <a asp-action="Index" asp-controller="Company" class="nav-link">
                                <i class="fas fa-building"></i>
                                    <p class="adjust-space">
                                        Companies
                                        <span class="badge badge-info right"></span>
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                            <a asp-action="Index" asp-controller="Client" class="nav-link">
                                <i class="fas fa-users"></i>
                                    <p class="adjust-space">
                                        Clients
                                        <span class="badge badge-info right"></span>
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                            <a asp-action="Index" asp-controller="Project" class="nav-link">
                                <i class="fas fa-project-diagram"></i>
                                    <p class="adjust-space">
                                        Projects
                                        <span class="badge badge-info right"></span>
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                            <a asp-action="Index" asp-controller="Module" class="nav-link">
                                <i class="fas fa-cubes"></i>
                                    <p class="adjust-space">
                                        Modules
                                        <span class="badge badge-info right"></span>
                                    </p>
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("CLIENT"))
                        {
                            <li class="nav-item">
                            <a asp-action="ViewStatus" asp-controller="Client" class="nav-link">
                                <i class="fas fa-file-invoice"></i>
                                    <p class="adjust-space">
                                        View Change Request
                                        <span class="badge badge-info right"></span>
                                    </p>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <div id ="content-wrapper-fixer" class="content-wrapper">

            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">@ViewData["Menu"]</h1>
                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">

                                <li class="breadcrumb-item active"><a asp-action="Index">@ViewBag.Controller</a></li>
                                <li class="breadcrumb-item">@ViewData["Title"]</li>

                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->

            <main role="main" class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </main>
        </div>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
        <!-- Main Footer -->
        <footer class="main-footer" style="position: fixed;width:100vw;bottom: 0;overflow: clip;">
            <strong>Copyright &copy; 2021 <a href="https://ekbana.com/">EKbana</a>.</strong>
            All rights reserved.

        </footer>
    </div>
    <!-- ./wrapper -->

    <style>
        #content-wrapper-fixer
        {
            min-height:200px !important;
        }
        .dropdown-divider:first-child {
            display: none;
        }
        .dropdown-divider:last-child {
            display: none;
        }

        .nav-link
        {
            position:relative !important;
        }

        .adjust-space
        {
            margin-left: 0.5vw !important;
            position: absolute;
            left: 15%;
        }
	</style>

    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/theme/plugins/jquery/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <!-- Bootstrap -->
    <script src="~/theme/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- overlayScrollbars -->

    <script src="~/theme/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/theme/dist/js/adminlte.js"></script>

    <!-- PAGE PLUGINS -->
    <!-- jQuery Mapael -->
    <script src="~/theme/plugins/jquery-mousewheel/jquery.mousewheel.js"></script>
    <script src="~/theme/plugins/raphael/raphael.min.js"></script>
    <script src="~/theme/plugins/jquery-mapael/jquery.mapael.min.js"></script>
    <script src="~/theme/plugins/jquery-mapael/maps/usa_states.min.js"></script>

    <!-- ChartJS -->
    <script src="~/theme/plugins/chart.js/Chart.min.js"></script>

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/theme/dist/js/demo.js"></script>

    <script src="~/js/site.js"></script>


    <script>
        $(document).ready(function () {

            const url = window.location.href;
            $('ul.nav-sidebar a').filter(function () {
                return this.href == url;
            }).addClass('active');

            /*find active element add active class ,if it is inside treeview element, expand its elements and select treeview*/
            $('ul.nav-sidebar a').filter(function () {
                return this.href == url;
            }).addClass('active').closest(".has-treeview").addClass('menu-open').find("> a").addClass('active');

        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
