@section Links{
<link type="text/css" rel="stylesheet" href="~/theme/plugins/Calendar/style.css" />
<link type="text/css" rel="stylesheet" href="~/theme/plugins/Calendar/theme.css" />
}
@{
	ViewData["Title"] = "Information Panel";
}
<div class="card">
	<div class="card-body">
		<div class="row">
			<div class="col-lg-3 col-6">
				<div class="small-box bg-info">
					<div class="inner">
						<h3>@ViewData["TotalCompanies"]</h3>
						<p>Total Companies</p>
					</div>
					<div class="icon">
						<i class="fas fa-building"></i>
					</div>
					<a asp-action="Index" asp-controller="Company" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
				</div>
			</div>
			<div class="col-lg-3 col-6">
				<div class="small-box bg-info">
					<div class="inner">
						<h3>@ViewData["TotalProjects"]</h3>
						<p>Total Projects</p>
					</div>
					<div class="icon">
						<i class="fas fa-project-diagram"></i>
					</div>
					<a asp-action="Index" asp-controller="Project" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
				</div>
			</div>
			<div class="col-lg-3 col-6">
				<div class="small-box bg-info">
					<div class="inner">
						<h3>@ViewData["TotalClients"]</h3>
						<p>Total Clients</p>
					</div>
					<div class="icon">
						<i class="fas fa-users"></i>
					</div>
					<a asp-action="Index" asp-controller="Client" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="card">
	<div class="card-body">
		<div class="row">
			<div class="col-lg-3 col-6">
				<div class="small-box bg-info">
					<div class="inner">
						<h3>@ViewData["TotalChangeRequests"]</h3>
						<p>Total Change Requests</p>
					</div>
					<div class="icon">
						<i class="fas fa-file-invoice"></i>
					</div>
					<a asp-action="ViewStatus" asp-controller="Admin" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
				</div>
			</div>
			<div class="col-lg-3 col-6">
				<div class="small-box bg-warning">
					<div class="inner">
						<h3>@ViewData["TotalPendingChangeRequests"]</h3>
						<p>Total Pending Change Requests</p>
					</div>
					<div class="icon">
						<i class="fas fa-clock"></i>
					</div>
					<a asp-action="ViewStatus" asp-controller="Admin" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
				</div>
			</div>
			<div class="col-lg-3 col-6">
				<div class="small-box bg-success">
					<div class="inner">
						<h3>@ViewData["TotalApprovedChangeRequests"]</h3>
						<p>Total Approved Change Requests</p>
					</div>
					<div class="icon">
						<i class="fas fa-check-circle"></i>
					</div>
					<a asp-action="ViewStatus" asp-controller="Admin" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="card bg-info" style="position: relative; left: 0px; top: 0px;">
	<div id="calendar" style="width: 100%">
	</div>
</div>
@section Scripts{
<script src="~/theme/plugins/Calendar/calendar.min.js"></script>
<script>
	$(document).ready(function()
	{
		$('#calendar').calendar({
			date: new Date()
		});
	});
</script>
}

<style>
	.week .day.highlight span {
		color: #171b59;
	}

	.day.disabled span {
		color: #886F6F;
	}

	.week:not(.start-on-monday) .day:first-child {
		color: #fff;
	}

	.week:not(.start-on-monday) .day:first-child, .week:not(.start-on-monday) .day:last-child {
		color: #fff;
	}

	.buttons-container, .weeks-wrapper.header, .special-buttons {
		border: none !important;
	}

	.fa-angle-left, .fa-angle-right {
		color: white;
	}

	.week.highlight {
		background: #ffffff2e;
	}
</style>